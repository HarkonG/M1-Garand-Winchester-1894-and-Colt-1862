<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <!-- Winchester 1894 -->
  <ThingDef ParentName="BaseBullet">
    <defName>HRK_Bullet_1894Winchester</defName>
    <label>Winchester 1894 bullet</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>10</damageAmountBase>
      <speed>60</speed>
      <armorPenetrationBase>0.15</armorPenetrationBase>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>HRK_1894Winchester</defName>
    <label>Winchester 1894</label>
    <description>The Winchester Model 1894 rifle is a lever-action repeating rifle that became one of the most famous and popular hunting rifles of all time.</description>
    <graphicData>
      <texPath>Things/Weapons/HRK_1894Winchester</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>2.8</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
      <RangedWeapon_Cooldown>0.4</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <WoodLog>10</WoodLog>
      <Steel>60</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>HRK_Bullet_1894Winchester</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>25.9</range>
        <soundCast>HRK_Shot_1894Winchester</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

